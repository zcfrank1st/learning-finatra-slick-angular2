<configuration>
  <!-- Console Appender -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date %.-3level %-25X{traceId} %-25logger{0} %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.twitter" level="debug"/>
  <logger name="com.tapatron" level="debug"/>

  <root level="DEBUG">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>